generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        String   @id @default(uuid())
  name      String
  brands    Brand[]
  users     User[]   // QUAN TRỌNG: Thêm dòng này để kết nối với User
  createdAt DateTime @default(now())
}

model Brand {
  id              String       @id @default(uuid())
  orgId           String
  name            String
  socketNamespace String       @unique
  organization    Organization @relation(fields: [orgId], references: [id])
  kiosks          Kiosk[]
  users           User[]       // QUAN TRỌNG: Thêm dòng này để kết nối với User
  createdAt       DateTime     @default(now())
}

model User {
  id             String        @id @default(uuid())
  email          String        @unique
  password       String
  role           String        // "SUPERADMIN", "ORG_ADMIN", "BRAND_ADMIN"
  orgId          String?
  brandId        String?
  organization   Organization? @relation(fields: [orgId], references: [id])
  brand          Brand?        @relation(fields: [brandId], references: [id])
  createdAt      DateTime      @default(now())
}

model Kiosk {
  id             String   @id
  brandId        String
  status         String   @default("offline")
  specs          Json?
  lastScreenshot String?  @db.Text
  lastSeen       DateTime @updatedAt
  brand          Brand    @relation(fields: [brandId], references: [id])
}